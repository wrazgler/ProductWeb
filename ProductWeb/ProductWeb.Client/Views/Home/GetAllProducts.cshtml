@model ProductWeb.Client.ViewModels.GetAllProductsViewModel

@{
    ViewData["Title"] = "Список продуктов";
}
<div class="container" style="margin-top: 10%">
    <form>
        <div class="form-inline justify-content-center text-custom" style="margin-bottom: 25px; margin-top: 25px">
            <div class="form-group">
                <label>Продукт: </label>
                <input name="productName" value="@Model.FilterViewModel.SelectedProduct" class="form-control border-dark form-custom " />
            </div>
            <div class="form-group">
                <label>Категория: </label>
                <select name="categoryId" asp-items="@Model.FilterViewModel.Categories" class="form-control border-dark form-custom "></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Фильтр" class="btn btn-outline-dark btn-custom" />
            </div>
        </div>
    </form>

    <table class="table text-custom">
        <tr class="table-borderless">
            <td width="20%">
                <div class="btn-group-vertical">
                    <a style="color: #0066CC;" asp-action="AddProduct" asp-controller="Home" asp-route-page="@Model.AllProductsModel.PageModel.PageNumber">Добавить продукт</a>
                </div>
            </td>
            <td width="60%">
                <div class="btn-group-vertical">
                    <a style="color: #0066CC;" asp-action="AddCategory" asp-controller="Home" asp-route-page="@Model.AllProductsModel.PageModel.PageNumber" asp-route-previousPage="GetAllProducts">Добавить категорию</a>
                </div>
                <div class="btn-group-vertical">
                    <a style="margin-left: 50px; color: red;" asp-action="DeleteCategory" asp-controller="Home" asp-route-page="@Model.AllProductsModel.PageModel.PageNumber">Удалить категорию</a>
                </div>
            </td>

        </tr>
        <tr>
            <th width="20%">
                <a asp-action="GetAllProducts"
                   asp-route-categoryId="@(Model.FilterViewModel.SelectedCategory)"
                   asp-route-page="@(Model.AllProductsModel.PageModel.PageNumber)"
                   asp-route-productName="@(Model.FilterViewModel.SelectedProduct)"
                   asp-route-sortOrder="@(Model.AllProductsModel.SortModel.ProductSort)">Продукт</a>
            </th>
            <th>
                <a style="color: #0066CC;">Категория</a>
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var product in Model.AllProductsModel.Products)
        {
            <tr>
                <td width="20%"><a>@product.Name</a></td>
                <td width="60%">
                    @foreach (var category in product.Categories.OrderBy(c => c.Name))
                    {
                        <a>@category.Name</a>
                    }
                </td>
                <td width="10%"><a class="btn btn-sm btn-primary btn-custom-2" asp-action="EditProduct" asp-controller="Home" asp-route-id="@product.Id" asp-route-page="@Model.AllProductsModel.PageModel.PageNumber">Изменить</a></td>
                <td width="10%"><a class="btn btn-sm btn-danger  btn-custom-2" asp-action="DeleteProduct" asp-controller="Home" asp-route-id="@product.Id" asp-route-page="@Model.AllProductsModel.PageModel.PageNumber">Удалить</a></td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>

    </table>

    <page-link page-model="@Model.AllProductsModel.PageModel" page-action="GetAllProducts"
               page-url-productName="@(Model.FilterViewModel.SelectedProduct)"
               page-url-categoryId="@(Model.FilterViewModel.SelectedCategory)"
               page-url-sortorder="@(Model.AllProductsModel.SortModel.Current)"></page-link>
</div>